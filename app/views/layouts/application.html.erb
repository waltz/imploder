<!DOCTYPE html>
<html>
  <head>
    <title>imploder</title>
    <%= csrf_meta_tags %>

    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_link_tag 'application' %>

    <%= favicon_link_tag 'favicons/favicon.ico' %>
    <%= favicon_link_tag 'favicons/favicon-16x16.png', rel: 'icon', type: 'image/png', sizes: '16x16' %>
    <%= favicon_link_tag 'favicons/favicon-32x32.png', rel: 'icon', type: 'image/png', sizes: '32x32' %>

    <%= yield :head %>
  </head>

  <body>
    <div id="container">
      <header>
        <h1>
          <%= link_to 'imploder', root_path, title: 'go home' %>
        </h1>
      </header>

      <div id="main-outer">
        <main>
          <%= yield %>
        </main>
      </div>

      <footer>
        <ul>
          <li>
            built by <a href="https://twitter.com/waltz" title="big on the internet">@waltz</a>
          </li>
          <li>
            see the <a href="https://github.com/waltz/imploder" title="oh god don't judge me">the source</a>
          </li>
        </ul>
      </footer>
    </div>
  </body>
</html>
